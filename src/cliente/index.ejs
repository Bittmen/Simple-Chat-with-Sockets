<% include layouts/_header %>

<script type="text/javascript" src="/socket.io/socket.io.js"></script>
<script type="text/javascript" src="./js/main.js"></script>

<nav class="navbar navbar-dark bg-dark mb-4">
        <a href="/" class="navbar-brand">Chat con sockets</a>
        <form action="/logout" method="POST">
            <button type="submit" class="btn btn-outline-warning my-2 -my-sm-0">Salir</button>
        </form>
</nav>

<div class="container" style="padding: 5%;">
    <div class="row justify-content-md-center">
            <div class="card bg-light mb-3" id="contenido" style="width:100%; height: 400px; overflow-y:scroll;">
                <div class="card-header">Mensajes</div>
                <div class="card-body" id="mensajes">

                </div>
            </div>
            <form id="form_mensajes">
                <div class="form-row">
                    <input type="hidden" class="form-control" id="nick" value="<%=nick%>">
                    <div class="col-md-10">
                        <input type="text" class="form-control" id="mensaje" placeholder="Type something..." value="">
                    </div>
                    <div class="col-md-2 text-center mt-2">
                        <button type="submit" class="btn btn-primary" id="envia">Enviar</button>
                    </div>
                </div>
            </form>
    </div>
</div>

<% include layouts/_footer %>
