<div class="row align-items-start py-2 border-bottom bg-light">
    <div class="col-2 d-block d-sm-none text-center">
        <a href="/home" class="fa fa-lg fa-home"></a>
    </div>
    <div class="col-10 col-sm-12 text-center">
        <strong>Chat general</strong>
    </div>
</div>
<div class="row" style="height: 550px; overflow-y: scroll" id="contenido">
  <div class="col-12">
    <div class="" id="mensajes">

    </div>
  </div>
</div>
<div class="row justify-content-center border-top bg-light">
    <div class="col-12 col-md-6 mt-2">
        <div class="form-inline" action="">
            <input type="hidden" id="ID" value="<%=ID%>">
            <input type="hidden" class="form-control" id="nick" value="<%=nick%>">
            <div class="form-group">
                <input type="text" class="form-control" id="mensaje" placeholder="Type something" 
                        onkeypress="return searchKeyPress(event);" style="border-radius: 999px;">
            </div>
            <div class="form-group ml-2">
                <button class="btn btn-sm btn-primary" id="envia">Enviar</button>
            </div>
        </div>
    </div>
</div>

<script>
    function searchKeyPress(e){
        e = e || window.event;
        if (e.keyCode == 13){
            let messenger = new Messenger();
            messenger.enviaMensaje();
            return false;
        }
        return true;
    }
</script>

