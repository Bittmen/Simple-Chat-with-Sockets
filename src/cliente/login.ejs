<% include layouts/_header %>

<div class="col-12 col-md-12 m-0 p-0">
    <% if(mensaje && mensajeType == 'error') { %>
        <div class="alert alert-danger text-center" id="alerta"><%=mensaje%></div>
    <% } else if (mensaje && mensajeType == 'success') { %>
        <div class="alert alert-success text-center" id="alerta"><%=mensaje%></div>
    <% } %>
</div>
<div class="container" style="margin-top: 10%;">
    <div class="row  justify-content-md-center">
        <div class="col-md-4">
            <div class="card shadow-lg">
                <div class="card-header">
                    Login
                </div>
                <div class="card-body">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email"  placeholder="Correo" required>
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" id="password" name="password" placeholder="Contraseña" required>
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary" id="entrar">Entrar</button>
                        </div>
                        <div class="text-center">
                            <a href="/register">Registrarse</a><br>
                            <a href="#">Reestablecer contraseña</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include layouts/_footer %>